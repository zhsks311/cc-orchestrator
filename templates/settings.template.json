{
  "alwaysThinkingEnabled": true,
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "python3 {{HOOKS_PATH}}/collect_project_context.py \"$CWD\""
          },
          {
            "type": "command",
            "command": "python3 {{HOOKS_PATH}}/recovery_wrapper.py"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 {{HOOKS_PATH}}/summary_saver_wrapper.py"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 {{HOOKS_PATH}}/summary_saver_wrapper.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 {{HOOKS_PATH}}/context_saver_wrapper.py"
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "python3 {{HOOKS_PATH}}/context_saver_wrapper.py"
          }
        ]
      },
      {
        "matcher": "TodoWrite",
        "hooks": [
          {
            "type": "command",
            "command": "python3 {{HOOKS_PATH}}/context_saver_wrapper.py"
          },
          {
            "type": "command",
            "command": "python3 {{HOOKS_PATH}}/review_completion_wrapper.py",
            "timeout": 180
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 {{HOOKS_PATH}}/review_test_wrapper.py"
          }
        ]
      }
    ]
  }
}
