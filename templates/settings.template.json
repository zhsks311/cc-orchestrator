{
  "alwaysThinkingEnabled": true,
  "hooks": {
    "SessionStart": [
      {
        "id": "cco:session-recovery",
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "{{PYTHON}} {{HOOKS_PATH}}/collect_project_context.py \"$CWD\""
          },
          {
            "type": "command",
            "command": "{{PYTHON}} {{HOOKS_PATH}}/recovery_wrapper.py"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "id": "cco:pre-compact-summary",
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "{{PYTHON}} {{HOOKS_PATH}}/summary_saver_wrapper.py"
          }
        ]
      },
      {
        "id": "cco:todo-enforcer",
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "{{PYTHON}} {{HOOKS_PATH}}/todo_enforcer_wrapper.py"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "id": "cco:session-end-summary",
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "{{PYTHON}} {{HOOKS_PATH}}/summary_saver_wrapper.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "id": "cco:edit-context",
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "{{PYTHON}} {{HOOKS_PATH}}/context_saver_wrapper.py"
          },
          {
            "type": "command",
            "command": "{{PYTHON}} {{HOOKS_PATH}}/ui_qa_wrapper.py",
            "timeout": 10
          }
        ]
      },
      {
        "id": "cco:write-context",
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "{{PYTHON}} {{HOOKS_PATH}}/context_saver_wrapper.py"
          },
          {
            "type": "command",
            "command": "{{PYTHON}} {{HOOKS_PATH}}/ui_qa_wrapper.py",
            "timeout": 10
          }
        ]
      },
      {
        "id": "cco:todo-review",
        "matcher": "TodoWrite",
        "hooks": [
          {
            "type": "command",
            "command": "{{PYTHON}} {{HOOKS_PATH}}/context_saver_wrapper.py"
          },
          {
            "type": "command",
            "command": "{{PYTHON}} {{HOOKS_PATH}}/review_completion_wrapper.py",
            "timeout": 180
          }
        ]
      },
      {
        "id": "cco:bash-test-review",
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "{{PYTHON}} {{HOOKS_PATH}}/review_test_wrapper.py"
          }
        ]
      }
    ]
  }
}
